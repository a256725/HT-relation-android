<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg_eeeeee"
                tools:context=".ui.activity.MainActivity">

    <FrameLayout
            android:id="@+id/fl_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/ll_bottom"/>


    <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp52"
            android:elevation="@dimen/elevation_4"
            android:layout_alignParentBottom="true"
            android:background="@color/white">

        <RelativeLayout
                android:id="@+id/rl_menu0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onclick"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/tv_menu0_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawableTop="@drawable/main_tab_selector1"
                    android:drawablePadding="2dp"
                    android:elevation="@dimen/dp2"
                    android:gravity="center_horizontal"
                    android:text="@string/main_tab_item0"
                    android:textColor="@color/main_tab_selector"
                    android:textSize="@dimen/sp11" />
        </RelativeLayout>


        <RelativeLayout
                android:id="@+id/rl_menu1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onclick"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/tv_menu1_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawableTop="@drawable/main_tab_selector1"
                    android:drawablePadding="2dp"
                    android:elevation="@dimen/dp2"
                    android:gravity="center_horizontal"
                    android:text="@string/main_tab_item1"
                    android:textColor="@color/main_tab_selector"
                    android:textSize="@dimen/sp11" />
        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/rl_menu2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onclick"
                android:orientation="vertical"
                android:visibility="visible">

            <TextView
                    android:id="@+id/tv_menu2_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawableTop="@drawable/main_tab_selector1"
                    android:drawablePadding="2dp"
                    android:elevation="@dimen/dp2"
                    android:gravity="center_horizontal"
                    android:text="@string/main_tab_item2"
                    android:textColor="@color/main_tab_selector"
                    android:textSize="@dimen/sp11" />
        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/rl_menu3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onclick"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/tv_menu3_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawableTop="@drawable/main_tab_selector1"
                    android:drawablePadding="2dp"
                    android:elevation="@dimen/dp2"
                    android:gravity="center_horizontal"
                    android:text="@string/main_tab_item3"
                    android:textColor="@color/main_tab_selector"
                    android:textSize="@dimen/sp11" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>